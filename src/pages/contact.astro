---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
---

<Layout title={`Contact | ${SITE.title}`}>
  <Header />

  <Breadcrumbs
    items={[
      { text: "Home", href: "/" },
      { text: "Contact", href: "/contact/" },
    ]}
  />

  <main id="main-content" class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold mb-6">Contact Us</h1>

      <div class="text-lg mb-8 text-skin-base">
        <p>
          Questions, comments, feedback? Just want to say hi?
        </p>
      </div>

      <form name="contact" method="POST" netlify class="space-y-6">
        <!-- Netlify form name -->
        <input type="hidden" name="form-name" value="contact" />

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label for="name" class="block text-sm font-medium text-skin-base">
              Name
            </label>
            <input
              type="text"
              name="name"
              id="name"
              required
              class="mt-2 block w-full rounded-lg border-0 p-3 shadow-sm ring-1 ring-inset ring-skin-muted placeholder:text-skin-muted focus:ring-2 focus:ring-inset focus:ring-skin-accent text-skin-base"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-skin-base">
              Email
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="mt-2 block w-full rounded-lg border-0 p-3 shadow-sm ring-1 ring-inset ring-skin-muted placeholder:text-skin-muted focus:ring-2 focus:ring-inset focus:ring-skin-accent text-skin-base"
            />
          </div>

          <div class="sm:col-span-2">
            <label for="message" class="block text-sm font-medium text-skin-base">
              Message
            </label>
            <textarea
              name="message"
              id="message"
              rows="4"
              required
              class="mt-2 min-h-48 block w-full rounded-lg border-0 p-3 shadow-sm ring-1 ring-inset ring-skin-muted placeholder:text-skin-muted focus:ring-2 focus:ring-inset focus:ring-skin-accent text-skin-base"
            ></textarea>
          </div>
        </div>

  <button
    type="submit"
    class="w-full inline-flex justify-center 
           rounded-lg bg-skin-accent 
           px-6 py-3             /* mobile */
           md:px-4 md:py-2       /* desktop */
           text-sm font-semibold text-white 
           shadow-sm hover:brightness-110 
           focus:outline-none focus:ring-2 focus:ring-inset focus:ring-skin-accent"
  >
    Send Message
  </button>
      </form>
    </div>
  </main>

  <Footer />
</Layout>
