---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
---

<Layout title={`Contact | ${SITE.title}`}>
  <Header />

  <Breadcrumbs
    items={[
      { text: "Home", href: "/" },
      { text: "Contact", href: "/contact/" },
    ]}
  />

  <main id="main-content" class="py-12">
    <div class="lg:px-8 mx-auto max-w-4xl px-4 sm:px-6">
      <h1 class="mb-6 text-4xl font-bold">Contact Us</h1>

      <div class="mb-8 text-lg text-skin-base">
        <p>Say hi!</p>
      </div>

      <form
        action="https://formspree.io/f/xqalzlkl"
        method="POST"
        name="contact"
        class="space-y-6"
      >
        <!-- Netlify form name -->
        <input type="hidden" name="form-name" value="contact" />

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label for="name" class="block text-sm font-medium text-skin-base">
              Name
            </label>
            <input
              type="text"
              name="name"
              id="name"
              required
              class="ring-skin-muted placeholder:text-skin-muted focus:ring-skin-accent mt-2 block w-full rounded-lg border-0 p-3 text-skin-base shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-skin-base">
              Email
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="ring-skin-muted placeholder:text-skin-muted focus:ring-skin-accent mt-2 block w-full rounded-lg border-0 p-3 text-skin-base shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset"
            />
          </div>

          <div class="sm:col-span-2">
            <label
              for="message"
              class="block text-sm font-medium text-skin-base"
            >
              Message
            </label>
            <textarea
              name="message"
              id="message"
              rows="4"
              required
              class="ring-skin-muted placeholder:text-skin-muted focus:ring-skin-accent mt-2 block min-h-48 w-full rounded-lg border-0 p-3 text-skin-base shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset"
            ></textarea>
          </div>
        </div>

        <button
          type="submit"
          class="/* mobile */ md:px-4 md:py-2 /* desktop */ focus:ring-skin-accent inline-flex w-full justify-center rounded-lg bg-skin-accent px-6 py-3 text-sm font-semibold text-white shadow-sm hover:brightness-110 focus:outline-none focus:ring-2 focus:ring-inset"
        >
          Send Message
        </button>
      </form>
    </div>
  </main>

  <Footer />
</Layout>
