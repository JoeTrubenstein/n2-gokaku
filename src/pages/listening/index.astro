---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
---

<Layout title={`Listening | ${SITE.title}`}>
  <Header activeNav="listening" />

  <Breadcrumbs
    items={[
      { text: "Home",     href: "/"             },
      { text: "Listening", href: "/listening/" },
    ]}
  />

  <main id="main-content" class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <h1 class="text-4xl font-bold mb-6">JLPT N2 Listening</h1>

      <img
        src="/assets/images/listening-hero.png"
        alt="JLPT N2 Listening illustration"
        class="w-full mb-8"
      />

      <div class="text-lg mb-8">
        <p>
          <strong>What’s coming:</strong>
          Authentic N2 audio passages with transcriptions, comprehension questions, and detailed explanations—designed to train your ears for real-world Japanese.
        </p>
      </div>
      <div class="flex items-center justify-center h-48 rounded">
        <span class="text-2xl font-semibold">
          Coming Soon…
        </span>
      </div>

    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* keep background transparent */
  #main-content {
    @apply bg-transparent;
  }
</style>
