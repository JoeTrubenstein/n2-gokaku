---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Hero from "@components/Hero.astro"
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";

import Card from "../components/Card";

import getSortedPosts from "@utils/getSortedPosts";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content">

<Hero/>

    <Hr />

  



<section id="quick-start" class="py-12">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold">Quick Start</h2>
<ruby>合格<rt>ごうかく</rt></ruby>

    <!-- First row: 3 cards on desktop -->
    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-3 xl:gap-x-8">
      <!-- Kanji -->
      <div class="bg-skin-card-muted rounded shadow p-6 flex flex-col">
        <div class="w-12 h-12 bg-skin-card-muted-alt rounded shadow mb-4"></div>
        <h3 class="text-xl font-semibold mb-2">Kanji</h3>
        <p class="flex-grow text-gray-700 mb-4">
          Master the 200 most challenging N2 kanji for business-level fluency.
        </p>
        <a href="/kanji/" class="text-skin-accent font-medium hover:underline">
          Explore Kanji →
        </a>
      </div>

      <!-- Vocabulary -->
      <div class="bg-skin-card-muted rounded shadow p-6 flex flex-col">
        <div class="w-12 h-12 bg-skin-card-muted-alt rounded shadow mb-4"></div>
        <h3 class="text-xl font-semibold mb-2">Vocabulary</h3>
        <p class="flex-grow text-gray-700 mb-4">
          Build your business Japanese word bank with the essential N2 vocabulary.
        </p>
        <a href="/vocabulary/" class="text-skin-accent font-medium hover:underline">
          Explore Vocabulary →
        </a>
      </div>

      <!-- Grammar -->
      <div class="bg-skin-card-muted rounded shadow p-6 flex flex-col">
        <div class="w-12 h-12 bg-skin-card-muted-alt rounded shadow mb-4"></div>
        <h3 class="text-xl font-semibold mb-2">Grammar</h3>
        <p class="flex-grow text-gray-700 mb-4">
          Conquer the 50 must-know N2 grammar structures for confident communication.
        </p>
        <a href="/grammar/" class="text-skin-accent font-medium hover:underline">
          Explore Grammar →
        </a>
      </div>
    </div>

    <!-- Second row: 2 cards on desktop -->
    <div class="mt-8 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 xl:gap-x-8">
      <!-- Reading -->
      <div class="bg-skin-card-muted rounded shadow p-6 flex flex-col">
        <div class="w-12 h-12 bg-skin-card-muted-alt rounded shadow mb-4"></div>
        <h3 class="text-xl font-semibold mb-2">Reading</h3>
        <p class="flex-grow text-gray-700 mb-4">
          Practice with authentic N2 passages to boost your comprehension speed.
        </p>
        <a href="/reading/" class="text-skin-accent font-medium hover:underline">
          Explore Reading →
        </a>
      </div>

      <!-- Listening -->
      <div class="bg-skin-card-muted rounded shadow p-6 flex flex-col">
        <div class="w-12 h-12 bg-skin-card-muted-alt rounded shadow mb-4"></div>
        <h3 class="text-xl font-semibold mb-2">Listening</h3>
        <p class="flex-grow text-gray-700 mb-4">
          Train your ears on authentic N2 audio for real-world understanding.
        </p>
        <a href="/listening/" class="text-skin-accent font-medium hover:underline">
          Explore Listening →
        </a>
      </div>
    </div>
  </div>
</section>

<Hr/>


<!--  -->



<section id="products" class="py-12 bg-skin-background-alt">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold">Featured Prep Packs</h2>

    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-3 xl:gap-x-8">
      <!-- Reading Prep Pack -->
      <div class="bg-white rounded shadow p-6 flex flex-col">
        <!-- simulated image gradient -->
        <div class="w-full h-32 rounded mb-4 bg-skin-accent"></div>
        <h3 class="text-xl font-semibold mb-2">Reading Prep Pack</h3>
        <p class="flex-grow text-gray-700 mb-4">
          Everything you need to master N2 reading comprehension, including target passages, vocab lists, and answer keys.
        </p>
        <LinkButton href="/products/reading-prep-pack" className="mt-auto self-start">
          Get Reading Pack
        </LinkButton>
      </div>

      <!-- Kanji Mastery Pack -->
      <div class="bg-white rounded shadow p-6 flex flex-col">
        <!-- simulated image gradient -->
        <div class="w-full h-32 rounded mb-4 bg-skin-accent"></div>
        <h3 class="text-xl font-semibold mb-2">Kanji Mastery Pack</h3>
        <p class="flex-grow text-gray-700 mb-4">
          Drill the most challenging N2 kanji with stroke order guides, mnemonic hints, and quiz sheets.
        </p>
        <LinkButton href="/products/kanji-mastery-pack" className="mt-auto self-start">
          Get Kanji Pack
        </LinkButton>
      </div>

      <!-- Grammar Essentials Pack -->
      <div class="bg-white rounded shadow p-6 flex flex-col">
        <!-- simulated image gradient -->
        <div class="w-full h-32 rounded mb-4 bg-skin-accent"></div>
        <h3 class="text-xl font-semibold mb-2">Grammar Essentials Pack</h3>
        <p class="flex-grow text-gray-700 mb-4">
          Quick-reference guide to the top 50 N2 grammar points, with example sentences and practice exercises.
        </p>
        <LinkButton href="/products/grammar-essentials-pack" className="mt-auto self-start">
          Get Grammar Pack
        </LinkButton>
      </div>
    </div>
  </div>
</section>

    <Hr />
{recentPosts.length > 0 && (
  <>
    <section id="recent-posts" class="py-12">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl font-bold">Recent Blog Posts</h2>
        <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
          {recentPosts.map(
            ({ data, slug }, index) =>
              index < 2 && (
                <Card href={`/blog/${slug}/`} frontmatter={data} />
              )
          )}
        </div>
        <div class="all-posts-btn-wrapper mt-8">
          <LinkButton href="/blog/">
            all posts
            <svg xmlns="http://www.w3.org/2000/svg">
              <path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z" />
            </svg>
          </LinkButton>
        </div>
      </div>
        <Hr />
    </section>
  
  </>
)}

    <!-- Newsletter Signup -->
    <section id="newsletter" class="py-12 bg-skin-accent mb-8">
      <div class="max-w-7xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-white mb-4">Join the N2 Gokaku Newsletter</h2>
        <p class="text-lg text-skin-inverted mb-6">
          Weekly N2 tips, study memes, and Tokyo salaryman survival hacks.
        </p>
        <form class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <input
            type="email"
            placeholder="Enter your email"
            class="w-full sm:w-auto px-4 py-3 rounded shadow focus:outline-none"
          />
          <button
            type="submit"
            class="px-6 py-3 bg-white text-skin-accent font-semibold rounded shadow hover:opacity-90"
          >
            Let’s Gokaku!
          </button>
        </form>
      </div>
 
    </section>


  </main>

         <Hr />
  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8;
  }
  #hero h1 {
    @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-12;
  }
  #featured h2,
  #recent-posts h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>
